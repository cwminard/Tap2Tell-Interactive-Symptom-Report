<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF8E7"
    >

    <GridLayout
        android:id="@+id/mainGrid"
        app:layout_constraintVertical_bias="0.35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">




        <LinearLayout
            android:id="@+id/card2FA"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_card"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icon2FA"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_lock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2FA"
                android:textSize="16sp"
                android:textColor="#333"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cardChat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_card"
            android:padding="16dp">

            <ImageView
                android:id="@+id/Chat1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_chat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Betsy"
                android:textSize="16sp"
                android:textColor="#333"/>
        </LinearLayout>

        <!-- MEDICATION CARD -->
        <LinearLayout
            android:id="@+id/cardMeds"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_card"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconMeds"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_meds"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Medications"
                android:textSize="16sp"
                android:textColor="#333"/>
        </LinearLayout>

        <!-- SYMPTOMS CARD -->
        <LinearLayout
            android:id="@+id/cardSymptoms"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/feature_card"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconSymptoms"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_warning"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Report Symptoms"
                android:textSize="16sp"
                android:textColor="#333"/>
        </LinearLayout>

    </GridLayout>
    <LinearLayout
        android:id="@+id/cardProvider"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/feature_card"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mainGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iconProvider"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_provider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Provider"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
